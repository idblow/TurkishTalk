@page
@model Turkish_Talk.Pages.readingModel
@{
    ViewData["Title"] = "Раздел чтения";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.cdnfonts.com/css/inter" rel="stylesheet">
